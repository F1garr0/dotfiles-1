#!/bin/bash
doc="A wrapper around tmux.

Usage: t <project>

Will try to attach to a tmux session named <project>. If it cannot,
then it will start a tmux session from within /opt/code/<project>."

RED='\e[0;31m'
NC='\e[0m'

project=$1
path=/opt/code/$project

fatal() {
    echo -e "${RED}ERROR ${1}${NC}" >&2
    echo >&2
    echo "$doc" >&2
    exit 1
}

if [[ -z $project ]]; then
    fatal "No project given"
fi

if [[ ! -d $path ]]; then
    git clone git@github.com:RJMetrics/$project.git $path
fi

tmux_name="${project}/"

tmux attach -t "$tmux_name" || {
    cd $path
    tmux new-session    -s "$tmux_name"     -d
    tmux split-window   -t "$tmux_name:0"   -h
    tmux select-pane    -t "$tmux_name:0.0"
    tmux respawn-pane   -t "$tmux_name:0.0" -k 'vim'
    tmux attach-session -t "$tmux_name"
}
