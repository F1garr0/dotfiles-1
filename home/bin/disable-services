#!/bin/bash
services=(
    connections-service
    core-services-web
    dashboard-service
    import-api
    import-api-consumer
    rjql-service
    rjql-workers
    schema-service
    sourcerer-service
    sourcerer-workers
    webhooks-service
)
for service in "${services[@]}"; do
    sudo service $service stop         &>/dev/null
    sudo update-rc.d $service disable  &>/dev/null
done

sudo supervisorctl stop data-warehouse-service
sudo supervisorctl remove data-warehouse-service
